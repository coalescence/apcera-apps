<h3>Enter 2 Twitter Usernames</h3>

<form role="form" method="get" action="/follows" class="form-inline" style="width: 60%">
Does <div class="input-group"><span class="input-group-addon">@</span><input type="text" name="user1" placeholder="user1" class="span2"></div>
follow <div class="input-group"><span class="input-group-addon">@</span><input type="text" name="user2" class="span2" placeholder="user2"></div> ?
<input type="submit" class="btn btn-sm primary btn-default" value="Check">
</form>

<div id="leaderboard">
  <h3>Top Ten user queries</h3>
  <table class="table table-striped" style="width: 60%">
    <thead>
	  <tr><th style="width: 10%">#</th><th style="width: 90%">Twitter handle</th></tr>
	</thead>
    <tbody>
      <% @leaders.each_with_index do |leader, index| %>
      <tr><td><%= index+1 %></td><td><a href="http://twitter.com/<%= leader %>"><%= leader %></td></tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- hide details if not running on Apcera -->
<%
   app_hash = {
           fqn: ENV['CNTM_JOB_FQN'],
           uuid: ENV['CNTM_JOB_UUID'],
           instance_id: ENV['CNTM_INSTANCE_UUID'],
           host_info: ENV['CNTM_HOST_PORT']
   }
   unless app_hash['fqn'].nil? %>

<div class="well well-sm" style="width: 60%">
  <%= "<h5>Application job name: #{app_hash['fqn']}</h5>" %>
</div>
<div class="well well-sm" style="width: 60%">
  <%= "<h5>Job UUID: #{app_hash['uuid']}</h5>" %>
</div>
<div class="well well-sm" style="width: 60%">
  <%= "<h5>Instance ID: #{app_hash['instance_id']}</h5>" %>
</div>
<div class="well well-sm" style="width: 60%">
  <%= "<h5>Running on host: #{app_hash['host_info']}</h5>" %>
</div>
<% end %>
